{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Attach to Nest (start:debug)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Launch Nest (ts-node - direct)",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk=9229",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src/main.ts"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/**/*.ts"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Launch built app (dist/main.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect-brk=9229"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Jest Tests (single run)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect-brk=9229"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ]
}